def find_substrings(words):
    result = []
    for word1 in words:
        for word2 in words:
            if word1 != word2 and word1 in word2:
                result.append(word1)
                break
    return result

# Example
words = ["mass", "as", "hero", "superhero"]
output = find_substrings(words)
print(output)  # Output: ["as", "hero"]
